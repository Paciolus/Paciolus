# CloseSignify Backend Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - Application will not start without these
# =============================================================================

# Host address for the API server
API_HOST=0.0.0.0

# Port for the API server
API_PORT=8000

# Allowed frontend origins for CORS (comma-separated)
# Development example:
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Production example:
# CORS_ORIGINS=https://closesignify.com,https://www.closesignify.com

# =============================================================================
# OPTIONAL
# =============================================================================

# Environment mode: development, staging, production
ENV_MODE=development

# Enable debug mode (detailed error messages)
DEBUG=false
